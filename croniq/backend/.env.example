# Server Configuration
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=croniq_db

# JWT Configuration
JWT_SECRET=your_very_strong_jwt_secret_here_at_least_32_characters_long

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports (like 587 with STARTTLS)
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM="Croniq Monitoring <noreply@example.com>"

# Test Database Configuration (example, adjust as needed)
# Ensure this database exists and the schema from database/schema.sql is applied before running tests.
TEST_DB_HOST=localhost
TEST_DB_PORT=5433 # Often a different port or instance for test DB
TEST_DB_USER=your_test_db_user
TEST_DB_PASSWORD=your_test_db_password
TEST_DB_NAME=croniq_test_db
